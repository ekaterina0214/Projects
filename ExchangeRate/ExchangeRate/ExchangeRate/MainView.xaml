<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExchangeRate.MainView">
  <StackLayout VerticalOptions="Center">
    <Label Text="WELCOME!" VerticalOptions="Start" HorizontalOptions="Center" FontSize="75" FontAttributes="Bold" TextColor="#FF4081"/>
    <Label Text="To continue, please, choose DATE or PERIOD OF DATE" FontSize="16" VerticalOptions="Start" HorizontalOptions="Center" TextColor="#808080"/>
    <Button Text="DATE" BackgroundColor="#1976D2" FontSize="20" TextColor="White" Clicked="OnDateClicked"></Button>
    <Button Text="PERIOD OF DATE" BackgroundColor="#1976D2" FontSize="20" TextColor="White" Clicked="OnPeriodOfDateClicked"></Button>
  </StackLayout>
</ContentPage>